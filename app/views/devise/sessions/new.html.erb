

<div class="container">
 <h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{ class: "form-horizontal" }) do |f| %>
  <div class="field">
  <div class="row">
        <div class="col-md-6">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Enter" %>
    </div>
  </div>
  </div>

  <div class="field">
    <div class="row">
        <div class="col-md-6">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
       </div>
  </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class="row">
        <div class="col-md-6">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
         </div>
  </div>
    </div>
  <% end -%>

  <div class="actions">
    <div class="row">
        <div class="col-md-6">
    <%= f.submit "Log in" , class: "btn btn-success"%>
       </div>
  </div>
  </div>
<% end %>
 <br> 
  <%= render "devise/shared/links" %>
</div>

