<div class= "container">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
     <div class="row">
       <div class="col-md-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
   </div>
   </div> 
  </div>
 <br>
  <div class="actions">
    <%= f.submit "Send me reset password", class: "btn btn-success" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>

</div>